<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="7*" />
            </Grid.RowDefinitions>
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ComboBox Margin="0,0,20,0" Name="Txt_box1"  Tag="1">
                    <ComboBoxItem Content="Author"/>
                    <ComboBoxItem Content="Press"/>
                    <ComboBoxItem Content="Category"/>
                    <ComboBoxItem Content="Theme"/>

                </ComboBox>
                <ComboBox   Margin="0,0,20,0"  Name="Txt_box2" Tag="2" ></ComboBox>
            </WrapPanel>
            <ListBox Name="list_box" Grid.Row="1"></ListBox>
        </Grid>
    </Grid>
</Window>
